<script type="text/javascript">
  
  var i = 0

  var words = [{text: '', weight: 0}]

  
  <% 0.step(@g_data.length-1, 2) do |g| %>
    <% if @g_data[g+1].to_i > 500 %>
      words.push({ text: gon.g_data[i], weight: <%= @g_data[g+1].to_i / 150 + 10 %>})
      i += 2
    <% else %>
      words.push({ text: gon.g_data[i], weight: <%= @g_data[g+1].to_i * 2 + 60 %> })
      i += 2
    <% end %>
  <% end %>

  i = 0
  while(i < gon.y_data.length){
    words.push({ text: gon.y_data[i], weight: 40 - i * 3})
  }
  

  $("#example").jQCloud(words);
  $("#example").css("font-family", "微軟正黑體");

</script>