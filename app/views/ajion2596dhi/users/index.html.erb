<%= render partial: "ajion2596dhi/shared/head" %>

<div class="container">
  <div class="row">
    
    <br>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>name</th>
          <th>email</th>
          <th>role</th>
          <th>confirmed</th>
          <th>#</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <% if user.confirmed_at %>
              OK
            <% else %>
              none
            <% end %>
          </td>
          <td>
            <%= link_to "show", ajion2596dhi_user_path(user) %>
            <%= link_to "edit", edit_ajion2596dhi_user_path(user) %>
            <%= link_to 'Delete', ajion2596dhi_users_path(user), method: :delete, data:{confirm: "Are you sure?"} %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>