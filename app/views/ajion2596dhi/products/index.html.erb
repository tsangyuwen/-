<%= render partial: "ajion2596dhi/shared/head" %>

<div class="container">
  <div class="row">
    
    <br>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>name</th>
          <th>image</th>
          <th>price</th>
          <th>color</th>
          <th>size</th>
          <th>#</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <tr>
          <th scope="row"><%= item.id %></th>
          <td><%= item.name %></td>
          <td><%= image_tag item.main_image, width: "30px" %></td>
          <td><%= item.price %></td>
          <td>
            <% item.products.pluck(:color).uniq.each do |color| %>
              <div class="colorbox" style="float: left; background-color: #<%= color %>;"></div>
            <% end %>
          </td>
          <td>
            <% item.products.pluck(:size).uniq.each do |size| %>
              <%= size %>
            <% end %>
          </td>
          <td>
            <%= link_to "show", ajion2596dhi_product_path(item) %>
            <%= link_to "edit", edit_ajion2596dhi_product_path(item) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>