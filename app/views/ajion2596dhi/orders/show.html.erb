<div class="container">
  <div class="row">
    <%= link_to "Back", ajion2596dhi_orders_path %>
    <br>
    
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>訂單編號</th>
          <th><%= @order.sn %></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <th>收件人姓名</th>
          <th><%= @order.name %></th>
        </tr>

        <tr>
          <th>手機</th>
          <th><%= @order.phone %></th>
        </tr>

        <tr>
          <th>物流狀態</th>
          <th><%= @order.shipping_status %></th>
        </tr>

        <tr>
          <th>付款狀態</th>
          <th><%= @order.payment_status %></th>
        </tr>

        <tr>
          <th>發票</th>
          <th><%= @order.tax_id %></th>
        </tr>

        <tr>
          <th>收件人地址</th>
          <th><%= @order.address %></th>
        </tr>

        <tr>
          <th>付款金額</th>
          <th><%= number_with_delimiter(@order.amount, :delimiter => ',') %></th>
        </tr>

      </tbody>
    </table>

    <div class="order-table" style="margin: 0px auto; background-color: white">
    
      <% @order.order_items.each do |item| %>
        <div class="item-box">
          <%= image_tag item.product.item.main_image, class: "item-image", style: "margin-right: 10px;" %>

          <table class="item-table" style="font-size: 12px; margin-top: 10px">
            <tr>
              <td></td>
              <td style="font-size: 14px;"><%= item.product.item.name %></td>
            </tr>

            <tr>
              <td style="width:5%"></td>
              <td style="width:20%">尺寸</td>
              <td style="width:15%"><%= item.product.size %></td>
              <td style="width:30%"></td>
              <td style="width:15%">顏色</td>
              <td style="width:15%"><div class="colorbox" style="background-color: #<%= item.product.color %>;"></div></td>
              <td style="width:5%"></td>
            </tr>

            <tr>
              <td></td>
              <td>數量</td>
              <td><%= item.quantity %></td>
              <td></td>
              <td>單價</td>
              <td><%= number_with_delimiter(item.price, :delimiter => ',') %></td>
              <td></td>
            </tr>

            <tr style="border-top: 2px solid;">
              <td></td>
              <td style="color:#5f0ac7">小計</td>
              <td style="color:#5f0ac7"><%= number_with_delimiter(item.price * item.quantity, :delimiter => ',') %></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </table>
          
        </div>
      <% end %>
    </div>
    
  </div>
</div>
