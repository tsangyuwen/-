<%= render partial: "ajion2596dhi/shared/head" %>

<div class="container">
  <div class="row">
    
    <br>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>訂單編號</th>
          <th>訂單日期</th>
          <th>付款狀態</th>
          <th>物流狀態</th>
          <th>付款金額</th>
          <th>#</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th scope="row"><%= order.id %></th>
          <td><%= order.sn %></td>
          <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td><%= order.payment_status %></td>
          <td><%= order.shipping_status %></td>
          <td><%= order.amount %></td>
          <td>
            <%= link_to "show", ajion2596dhi_order_path(order) %>
            <%= link_to "edit", edit_ajion2596dhi_order_path(order) %>
            <%= link_to 'Delete', ajion2596dhi_order_path(order), method: :delete, data:{confirm: "Are you sure?"} %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>


  </div>
</div>