<% if devise_error_messages! != '' %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    輸入錯誤，請再輸入一次
  </div>
<% end %>

<div class="bg-box">

  <div class="member-set">
    <%= link_to orders_path, :class => 'member-link' do %>
      訂單查詢
    <% end %>

    <%= link_to users_path, {:class => 'member-link underline', :style => 'float: right;'} do %>
      帳號設定
    <% end %>
  </div>

  <div class="login" style="text-align: center; margin-top: 40px;">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div style="text-align: left; padding-left: 20%;">
      
        <div class="field" style="margin-bottom:40px;" >
          舊密碼
          <%= f.password_field :current_password, placeholder: "英文字區分大小寫", autocomplete: "off", style: "margin-left:55px",  class: "form-style box" %>
        </div>

        <div class="field" style="margin-bottom:40px;" >
          新密碼
          <%= f.password_field :password, placeholder: "英文字區分大小寫", autocomplete: "off", style: "margin-left:55px",  class: "form-style box" %>
        </div>

        <div class="field"style="margin-bottom:40px;" >
          確認密碼
          <%= f.password_field :password_confirmation, placeholder: "英文字區分大小寫", autocomplete: "off", style: "margin-left:40px",  class: "form-style box" %>
        </div>
      </div>

      <div class="actions submit-button" style="margin-bottom: 10px; text-align: center;">
        <%= f.submit "確認修改", style: "width: 50%;background-color: #59544f;margin: 20px 0px",class: "login-submit" %>
      </div>

    <% end %>

  </div>
</div>
