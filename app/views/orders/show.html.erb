<% tab "member" %>
<div class="bg-box">

  <div class="member-set">
    <%= link_to orders_path, :class => 'member-link underline' do %>
      訂單查詢
    <% end %>

    <%= link_to users_path, {:class => 'member-link', :style => 'float: right;'} do %>
      帳號設定
    <% end %>
  </div>

  <table class="order-item order-table" align="center">

    <tr>
      <td style="color: #110b0a; padding-top: 10px;">訂單資訊</td>
    </tr>

    <tr>
      <td style="width:20%">收件人姓名</td>
      <td style="width:35%"><%= @order.name %></td>
      <td style="width:10%"></td>
      <td style="width:17%">手機</td>
      <td style="width:18%"><%= @order.phone %></td>
    </tr>

    <tr>
      <td>收件人地址</td>
      <td><%= @order.address %></td>
      <td></td>
      <td>付款金額</td>
      <td><%= number_with_delimiter(@order.amount, :delimiter => ',') %></td>
    </tr>

  </table>

  <hr style="width: 85%; margin-top: 10px">

  <div class="order-table" style="margin: 0px auto;">
    購買明細資料
    
    <% @items.each do |item| %>
      <div class="item-box">
        <%= image_tag item.product.main_image, class: "item-image", style: "margin-right: 10px;" %>

        <table class="item-table" style="font-size: 12px; margin-top: 10px">
          <tr>
            <td></td>
            <td style="font-size: 14px;"><%= item.product.name %></td>
          </tr>

          <tr>
            <td style="width:5%"></td>
            <td style="width:15%">尺寸</td>
            <td style="width:15%">F</td>
            <td style="width:30%"></td>
            <td style="width:15%">顏色</td>
            <td style="width:15%"><div class="colorbox" style="background-color: #8DC1E8;"></div></td>
            <td style="width:5%"></td>
          </tr>

          <tr>
            <td></td>
            <td>數量</td>
            <td><%= item.quantity %></td>
            <td></td>
            <td>單價</td>
            <td><%= number_with_delimiter(item.price, :delimiter => ',') %></td>
            <td></td>
          </tr>

          <tr style="border-top: 2px solid;">
            <td></td>
            <td style="color:#5f0ac7">小計</td>
            <td style="color:#5f0ac7"><%= number_with_delimiter(item.price * item.quantity, :delimiter => ',') %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </table>
        
      </div>
    <% end %>
  </div>

</div>
